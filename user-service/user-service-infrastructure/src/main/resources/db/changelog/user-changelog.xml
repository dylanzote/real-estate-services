<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1722564484_createUser" author="Dylan Zote">
        <createTable tableName="users">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
            <column name="keycloak_user_id" type="varchar(255)"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="user_name" type="varchar(255)"/>
            <column name="email" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="phone_number" type="varchar(255)"/>
            <column name="date_of_birth" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="status" type="varchar(50)"/>
            <column name="email_confirmed" type="boolean"/>
            <column name="new_user" type="boolean"/>
            <column name="gender" type="varchar(50)"/>
            <column name="town" type="varchar(255)"/>
            <column name="address" type="varchar(255)"/>
            <column name="image_url" type="varchar(255)"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>
    </changeSet>
</databaseChangeLog>